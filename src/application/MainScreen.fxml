<AnchorPane fx:id="form" onMouseEntered="#rotateRing" prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainScreenController">
   <children>
      
      <Button fx:id="exitButton" layoutX="231.0" layoutY="692.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="48.0" prefWidth="157.0" text="Exit">
         <font>
            <Font name="System Bold" size="17.0" />
         </font></Button>
      <Label graphicTextGap="10.0" layoutX="189.0" layoutY="46.0" prefHeight="76.0" prefWidth="240.0" text="KOLOR SWEECH" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font></Label>
      <Button fx:id="aboutButton" layoutX="231.0" layoutY="619.0" mnemonicParsing="false" onAction="#showAbout" prefHeight="31.0" prefWidth="157.0" text="About">
         <font>
            <Font name="System Bold" size="22.0" />
         </font></Button>
      <Button fx:id="instructionsButton" layoutX="234.0" layoutY="548.0" mnemonicParsing="false" onAction="#showInstructions" prefHeight="48.0" prefWidth="157.0" text="Instructions">
         <font>
            <Font name="System Bold" size="17.0" />
         </font></Button>
      <Button fx:id="loadGameButton" layoutX="231.0" layoutY="474.0" mnemonicParsing="false" onAction="#loadGame" prefHeight="48.0" prefWidth="157.0" text="Load Game">
