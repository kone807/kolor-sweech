            <Font name="System Bold" size="17.0" />
         </font></Button>
      <Button fx:id="playGameButton" layoutX="231.0" layoutY="400.0" mnemonicParsing="false" onAction="#playGame" prefHeight="54.0" prefWidth="157.0" text="Play New Game">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Button>
      <Group fx:id="gp" layoutX="215.0" layoutY="236.0">
         <children>
            <Arc fx:id="yellow" centerX="10.0" centerY="15.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="270.0" stroke="#e2ff00" strokeWidth="30.0" />
            <Arc fx:id="purple" centerX="110.0" centerY="15.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" stroke="#900dff" strokeWidth="30.0" />
            <Arc fx:id="blue" centerX="10.0" centerY="120.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="180.0" stroke="#32dbf0" strokeWidth="30.0" />
            <Arc fx:id="pink" centerX="110.0" centerY="120.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="90.0" stroke="#ff0181" strokeWidth="30.0" />
            <Circle fill="WHITE" layoutX="95.0" layoutY="30.0" radius="43.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
      </Group>
      <Label graphicTextGap="10.0" layoutX="14.0" layoutY="123.0" prefHeight="76.0" prefWidth="182.0" text="HIGH SCORE" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <Label fx:id="highScoreLabel" graphicTextGap="10.0" layoutX="14.0" layoutY="190.0" prefHeight="76.0" prefWidth="141.0" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      
   </children>
</AnchorPane>
