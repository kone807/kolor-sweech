<AnchorPane fx:id="form" onKeyPressed="#jump" onMouseEntered="#rotateRing" prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PlayNewGameController">
   <children>
      <Group fx:id="gp" layoutX="222.0" layoutY="317.0">
         <children>
            <Arc fx:id="yellow" centerX="10.0" centerY="15.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="270.0" stroke="#e2ff00" strokeWidth="30.0" />
            <Arc fx:id="purple" centerX="110.0" centerY="15.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" stroke="#900dff" strokeWidth="30.0" />
            <Arc fx:id="blue" centerX="10.0" centerY="120.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="180.0" stroke="#32dbf0" strokeWidth="30.0" />
            <Arc fx:id="pink" centerX="110.0" centerY="120.0" fill="#ffffff00" length="90.0" radiusX="75.0" radiusY="75.0" rotate="90.0" stroke="#ff0181" strokeWidth="30.0" />
            <ImageView fitHeight="99.0" fitWidth="106.0" layoutX="48.0" layoutY="-19.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/star.png" />
               </image>
            </ImageView>
         </children>
      </Group>
      <Circle fx:id="ball" fill="#32dbf0" layoutX="300.0" layoutY="617.0" radius="20.0" stroke="BLACK" strokeType="INSIDE" />
      <Button fx:id="backButton" layoutX="38.0" layoutY="42.0" mnemonicParsing="false" onAction="#goBack" prefHeight="50.0" prefWidth="114.0" text="BACK">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant color="#ffd23c" />
               </light>
            </Lighting>
         </effect>
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop color="#b06b6b" />
                  <Stop color="#f81212" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill>
      </Button>
      <Button fx:id="backButton1" layoutX="462.0" layoutY="42.0" mnemonicParsing="false" onAction="#goBack" prefHeight="50.0" prefWidth="114.0" text="PAUSE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant color="#ffd23c" />
               </light>
            </Lighting>
         </effect>
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop color="#b06b6b" />
                  <Stop color="#f81212" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill>
      </Button>
      
   </children>
</AnchorPane>
